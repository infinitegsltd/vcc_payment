{% extends 'base.html.twig' %}

{% block title %}Bucket{% endblock %}

{% block body %}
    <h1>Bucket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bucket.id }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ bucket.startDate ? bucket.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ bucket.endDate ? bucket.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Limit_val</th>
                <td>{{ bucket.limitVal }}</td>
            </tr>
            <tr>
                <th>Vendor</th>
                <td>{{ bucket.vendor }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bucket_index') }}">back to list</a>

    <a href="{{ path('bucket_edit', {'id': bucket.id}) }}">edit</a>

    {{ include('bucket/_delete_form.html.twig') }}
{% endblock %}
